package hr.fer.zemris.optjava.dz2;

import org.apache.commons.math3.linear.RealVector;

public class Prijenosna {

	public static void main(String[] args) {
		
		if(args.length != 3) {
			System.err.println("Program ocekuje 3 argumenta");
			System.exit(1);
		}
		 
		RealVector rjesenje = null;
		
		if(args[0].equals("grad")) {
			rjesenje = NumOptAlgorithms.algoritamGradijentnogSpusta(new Funkcija4(args[2]), Integer.parseInt(args[1]), null);
		} else if(args[0].equals("newton")) {
			//fali hesseova matrica :'(
			rjesenje = NumOptAlgorithms.algoritamNewtonoveMetode(new Funkcija4(args[2]), Integer.parseInt(args[1]), null);
		}
		
		double[] poljeKonstanti = rjesenje.toArray();
		double[] poljeXeva = new double[] { -0.160,  2.320, -3.500, -2.660,  4.620 };
		
		int vrijednostFunkcije = k[0]*x[0]+k[1]*x[0]*x[0]*x[0]*x[1]+k[2]*Math.pow(Math.E, k[3]*x[2])*(1+Math.cos(k[4]*x[3]))+k[5]*x[3]*x[4]*x[4];
		
	}

}
