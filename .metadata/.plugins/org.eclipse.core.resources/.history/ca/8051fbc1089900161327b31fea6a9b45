package hr.fer.zemris.optjava.dz3;

import java.util.Arrays;
import java.util.Random;

import hr.fer.zemris.optjava.dz3.solutions.BitvectorSolution;

public class BitvectorBinomNeighborhood implements INeighborhood<BitvectorSolution> {

	private int[] numOfChangingBitsPerVariable;
	private int[] bitsPerVariable;
	private Random rand;
	//private DifferentRandIntegersGenerator generator;

	public BitvectorBinomNeighborhood(int[] numOfChangingBitsPerVariable, int[] bitsPerVariable) {
		int len = numOfChangingBitsPerVariable.length;
		this.numOfChangingBitsPerVariable = Arrays.copyOf(numOfChangingBitsPerVariable, len);
		this.bitsPerVariable = Arrays.copyOf(bitsPerVariable, bitsPerVariable.length);
		this.rand = new Random();
	}
	
	@Override
	public BitvectorSolution randomNeighbor(BitvectorSolution t) {
		// TODO Auto-generated method stub
		return null;
	}

}
